<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="578.0" prefWidth="993.0" styleClass="anchorPane" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.LoginController">
   <children>
      <VBox alignment="CENTER" layoutY="64.0" prefHeight="429.0" prefWidth="995.0" style="-fx-background-color: white;" stylesheets="@../../css/styles.css">
         <children>
            <ImageView fitHeight="133.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
               <image>
                  <Image url="@../../imgs/usuario.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" prefHeight="114.0" prefWidth="346.0" stylesheets="@../../css/styles.css" text="BM chat - Inicio sesión">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font></Label>
            <TextField fx:id="usernameField" prefHeight="29.0" prefWidth="321.0" promptText="User Name">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="40.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" prefHeight="29.0" prefWidth="321.0" promptText="Password">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Text fx:id="backToSignup" onMouseClicked="#swapWindow" style="-fx-underline: true;" text="¿Eres nuevo?">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="218.0" prefWidth="985.0" spacing="50.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onMouseClicked="#onClickLogin" prefHeight="54.0" prefWidth="105.0" text="Iniciar sesión">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
