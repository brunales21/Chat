<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" prefHeight="578.0" prefWidth="993.0" styleClass="anchorPane" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.controllers.LoginController">
   <children>
      <VBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" alignment="CENTER" layoutX="97.0" layoutY="86.0" maxHeight="500.0" maxWidth="800.0" prefHeight="406.0" prefWidth="803.0" styleClass="interior" stylesheets="@../../css/styles.css">
         <children>
            <ImageView fitHeight="133.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/mensajero.png" />
               </image>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ImageView>
            <Label alignment="CENTER" maxHeight="140.0" maxWidth="450.0" prefHeight="114.0" prefWidth="346.0" stylesheets="@../../css/styles.css" text="ChatBM - Inicio de sesión" textFill="#02abcd" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="usernameField" maxHeight="29.0" maxWidth="400.0" prefHeight="29.0" prefWidth="321.0" promptText="Nombre de usuario">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" maxHeight="29.0" maxWidth="400.0" prefHeight="29.0" prefWidth="321.0" promptText="Contraseña">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Text fx:id="backToSignup" fill="#02abcd" fontSmoothingType="LCD" onMouseClicked="#swapWindow" style="-fx-underline: true;" text="¿Eres nuevo?">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="218.0" prefWidth="985.0" spacing="50.0">
               <children>
                  <Button fx:id="loginButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onClickLogin" opacity="0.78" prefHeight="58.0" prefWidth="120.0" style="-fx-background-color: #02abcd;" text="Iniciar sesión">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
